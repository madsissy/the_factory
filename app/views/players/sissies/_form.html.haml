= simple_form_for @form, url: player_sissy_path(@player, @sissy), method: :patch do |f|
  = f.input :firstname
  = f.input :lastname
  = f.input :surname
  = f.input :job_name,  collection: Job.all.map{ |job| job.name }
  = f.input :headgear,  collection: @player.sissy_clothes.headgear.uniq.map{ |sissy_clothe| [sissy_clothe.clothe.name, sissy_clothe.id] }
  = f.input :outfit,    collection: @player.sissy_clothes.outfit.uniq.map{|sissy_clothe| [sissy_clothe.clothe.name, sissy_clothe.id] }
  = f.input :shoes,     collection: @player.sissy_clothes.shoes.uniq.map{ |sissy_clothe| [sissy_clothe.clothe.name, sissy_clothe.id] }
  = f.button :submit, 'Start', class: 'button-primary-outline button-sm'
