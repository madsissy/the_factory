- %i(notice error alert).each do |value|
  - if flash[value]
    .container
      .custom-notif.alert.in{ class: value }
        .row
          .col.text-center
            %button.close{type: "button", data: {dismiss: "alert"}} &times;
            - if flash[value].kind_of?(Array)
              %ul.custom-list
                - flash[value].each do |message|
                  %li= message
            - else
              = raw flash[value]
